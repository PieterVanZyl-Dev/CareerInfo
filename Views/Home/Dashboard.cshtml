@{
    ViewData["Title"] = "Dashboard";
}
<style>
    .chart-padding {
        padding: 0 10px 0 10px;
    }

    .pie-chart, .column-chart, .line-chart {
        margin-bottom: 16px;
    }

    .card {
        margin-bottom: 16px;
    }
</style>
<h1>Career Information Statistics</h1>
<div class="row">
    <div class="col-xs-6 col-xl-3 col-lg-3 col-md-3 col-sm-6 card-container">
        <div class="e-card card">
            <div class="e-card-content">
                <h3 class="card-value" id="tolincome">R @ViewData["AverageSalary"]</h3>
                <span class="card-text">Average Income</span>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-xl-3 col-lg-3 col-md-3 col-sm-6 card-container">
        <div class="e-card card">
            <div class="e-card-content">
                <h3 class="card-value" id="tolexpense">@ViewData["JobCount"]</h3>
                <span class="card-text">Stored Jobs</span>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-xl-3 col-lg-3 col-md-3 col-sm-6 card-container">
        <div class="e-card card">
            <div class="e-card-content">
                <h3 class="card-value" id="tolbalance">@ViewData["TotalCompanies"]</h3>
                <span class="card-text">Amount of Unqiue Companies</span>
            </div>
        </div>
    </div>
    <div class="col-xs-6 col-xl-3 col-lg-3 col-md-3 col-sm-6 card-container">
        <div class="e-card card">
            <div class="e-card-content">
                <h3 class="card-value" id="toltransaction">@ViewData["FavouritedJobs"]</h3>
                <span class="card-text">Favourited Jobs</span>
            </div>
        </div>
    </div>
</div>

<div class="row pie-chart" id="totalExpense">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="pane col-xs-12 col-sm-12 col-md-12 pie-container">
            <div class="pieChartHeader">
            </div>
            <div class="row">
                <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" width="1100" height="350" src="https://charts.mongodb.com/charts-project0-abflf/embed/charts?id=62a50ec9-e879-461a-a900-40cf66fc9dd8&theme=light&attribution=false"></iframe>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="line-chart-area">
        <div class="col-xs-12 col-sm-6 col-md-6 chart-container">
            <div class="chart-padding">
                <div class="line-chart" style="width:100%; max-width: 550px;">
                    <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" width="500" height="465" src="https://charts.mongodb.com/charts-project0-abflf/embed/charts?id=9a242f8b-243a-46d7-ae06-aef1270d2a9c&theme=light"></iframe>
                </div>
            </div>
        </div>
    </div>
    <div class="column-chart-area">
        <div class="col-xs-12 col-sm-6 col-md-6 chart-container">
            <div class="chart-padding">
                <iframe style="background: #FFFFFF;border: none;border-radius: 2px;box-shadow: 0 2px 10px 0 rgba(70, 76, 79, .2);" width="500" height="465" src="https://charts.mongodb.com/charts-project0-abflf/embed/charts?id=11a66a61-011c-439e-a486-3b5d05369277&theme=light"></iframe>
            </div>
        </div>
    </div>
</div>




